{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "esnext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2017",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": ["dominant-baseline"]
        }
      }
    ],
    "typeRoots": [
      "@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}